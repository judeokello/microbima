{
  "info": {
    "name": "MicroBima API Collection",
    "description": "Comprehensive Postman collection for testing MicroBima Customer Onboarding and Partner Management APIs",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "Base URL for the MicroBima API"
    },
    {
      "key": "apiPrefix",
      "value": "api",
      "description": "API prefix for all endpoints"
    },
    "correlationId",
    "partnerId",
    "apiKey",
    "customerId"
  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "{{apiKey}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      },
      {
        "key": "key",
        "value": "x-api-key",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Generate correlation ID if not set",
          "if (!pm.collectionVariables.get('correlationId')) {",
          "    pm.collectionVariables.set('correlationId', 'req-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9));",
          "}",
          "",
          "// Set correlation ID header for all requests",
          "pm.request.headers.add({",
          "    key: 'x-correlation-id',",
          "    value: pm.collectionVariables.get('correlationId')",
          "});"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Internal API - Partner Management",
      "description": "Internal API endpoints for partner management (no authentication required)",
      "item": [
        {
          "name": "Create Partner",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerName\": \"Acme Insurance Ltd\",\n  \"website\": \"https://acme-insurance.com\",\n  \"officeLocation\": \"Nairobi, Kenya\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/internal/partner-management/partners",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "internal", "partner-management", "partners"]
            },
            "description": "Create a new partner in the system"
          },
          "response": []
        },
        {
          "name": "Get All Partners",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/internal/partner-management/partners?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "internal", "partner-management", "partners"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                }
              ]
            },
            "description": "Get paginated list of all partners"
          },
          "response": []
        },
        {
          "name": "Get Partner by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/internal/partner-management/partners/{{partnerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "internal", "partner-management", "partners", "{{partnerId}}"]
            },
            "description": "Get specific partner by ID"
          },
          "response": []
        },
        {
          "name": "Generate API Key for Partner",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerId\": {{partnerId}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/internal/partner-management/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "internal", "partner-management", "api-keys"]
            },
            "description": "Generate API key for a specific partner"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Public API - Partner Management",
      "description": "Public API endpoints for partner management (requires API key authentication)",
      "item": [
        {
          "name": "Reset API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/v1/partner-management/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "v1", "partner-management", "api-keys"]
            },
            "description": "Reset API key for authenticated partner (requires existing API key)"
          },
          "response": []
        },
        {
          "name": "Validate API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/v1/partner-management/api-keys/validate",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "v1", "partner-management", "api-keys", "validate"]
            },
            "description": "Validate an API key (requires API key in header)"
          },
          "response": []
        },
        {
          "name": "Deactivate API Key",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/v1/partner-management/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "v1", "partner-management", "api-keys"]
            },
            "description": "Deactivate an API key (sets isActive to false)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Public API - Customer Management",
      "description": "Public API endpoints for customer management (requires API key authentication)",
      "item": [
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"partnerCustomerId\": \"cust-12345\",\n  \"correlationId\": \"{{correlationId}}\",\n  \"product\": {\n    \"productId\": \"prod-001\",\n    \"planId\": \"plan-basic\"\n  },\n  \"principalMember\": {\n    \"firstName\": \"John\",\n    \"middleName\": \"Michael\",\n    \"lastName\": \"Doe\",\n    \"dateOfBirth\": \"1990-05-15\",\n    \"gender\": \"Male\",\n    \"idType\": \"national\",\n    \"idNumber\": \"12345678\",\n    \"phoneNumber\": \"+254712345678\",\n    \"email\": \"john.doe@example.com\",\n    \"occupation\": \"Software Engineer\",\n    \"maritalStatus\": \"Single\",\n    \"emergencyContact\": {\n      \"name\": \"Jane Doe\",\n      \"relationship\": \"Sister\",\n      \"phoneNumber\": \"+254723456789\"\n    }\n  },\n  \"beneficiaries\": [\n    {\n      \"firstName\": \"Alice\",\n      \"middleName\": \"Marie\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"1995-03-20\",\n      \"gender\": \"Female\",\n      \"relationship\": \"Sister\",\n      \"benefitPercentage\": 50\n    }\n  ],\n  \"children\": [\n    {\n      \"firstName\": \"Bob\",\n      \"middleName\": \"James\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"2010-08-10\",\n      \"gender\": \"Male\",\n      \"relationship\": \"Son\"\n    }\n  ],\n  \"spouses\": [\n    {\n      \"firstName\": \"Sarah\",\n      \"middleName\": \"Elizabeth\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"1992-12-05\",\n      \"gender\": \"Female\",\n      \"marriageDate\": \"2015-06-15\"\n    }\n  ],\n  \"referredBy\": \"Agent Smith\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/customers",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "customers"]
            },
            "description": "Create a new customer with partner relationship"
          },
          "response": []
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/customers/{{customerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "customers", "{{customerId}}"]
            },
            "description": "Get specific customer by ID (scoped to authenticated partner)"
          },
          "response": []
        },
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              },
              {
                "key": "x-correlation-id",
                "value": "{{correlationId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/customers?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "customers"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (max: 100)"
                }
              ]
            },
            "description": "Get paginated list of customers for authenticated partner"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "description": "Health check endpoints",
      "item": [
        {
          "name": "API Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Check API health status"
          },
          "response": []
        },
        {
          "name": "API Health Check (Alternative)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/{{apiPrefix}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["{{apiPrefix}}", "health"]
            },
            "description": "Alternative health check endpoint"
          },
          "response": []
        }
      ]
    },
    {
      "name": "API Documentation",
      "description": "API documentation endpoints",
      "item": [
        {
          "name": "Swagger UI",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api-docs",
              "host": ["{{baseUrl}}"],
              "path": ["api-docs"]
            },
            "description": "Access Swagger UI for API documentation"
          },
          "response": []
        }
      ]
    }
  ]
}
