{
  "info": {
    "name": "MicroBima Public API Collection",
    "description": "Public API endpoints for MicroBima Customer Onboarding and Partner Management (requires API key authentication)",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "Base URL for the MicroBima Public API"
    },
    {
      "key": "correlationId",
      "value": "req-{{$timestamp}}-{{$randomInt}}",
      "description": "Correlation ID for request tracking"
    },
    {
      "key": "partnerId",
      "value": "",
      "description": "Partner ID for testing"
    },
    {
      "key": "apiKey",
      "value": "",
      "description": "API Key for authentication"
    },
    {
      "key": "customerId",
      "value": "",
      "description": "Customer ID for testing"
    }
  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "x-api-key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{apiKey}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Generate correlation ID if not set",
          "if (!pm.collectionVariables.get('correlationId')) {",
          "    pm.collectionVariables.set('correlationId', 'req-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9));",
          "}",
          "",
          "// Set correlation ID header for all requests",
          "pm.request.headers.upsert({",
          "    key: 'x-correlation-id',",
          "    value: pm.collectionVariables.get('correlationId')",
          "});"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Partner Management",
      "description": "Public API endpoints for partner management (requires API key authentication)",
      "item": [
        {
          "name": "Reset API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/partner-management/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "partner-management", "api-keys"]
            },
            "description": "Reset API key for authenticated partner (requires existing API key)"
          },
          "response": []
        },
        {
          "name": "Deactivate API Key",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/partner-management/api-keys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "partner-management", "api-keys"]
            },
            "description": "Deactivate an API key (sets isActive to false)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Customer Management",
      "description": "Public API endpoints for customer management (requires API key authentication)",
      "item": [
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"correlationId\": \"{{correlationId}}\",\n  \"referredBy\": \"Agent Smith\",\n  \"product\": {\n    \"productId\": \"1\",\n    \"planId\": \"1\"\n  },\n  \"principalMember\": {\n    \"partnerCustomerId\": \"PARTNER-CUST-001\",\n    \"firstName\": \"John\",\n    \"middleName\": \"Michael\",\n    \"lastName\": \"Doe\",\n    \"dateOfBirth\": \"1985-06-15\",\n    \"gender\": \"Male\",\n    \"email\": \"john.doe@example.com\",\n    \"phoneNumber\": \"+254712345678\",\n    \"idType\": \"national\",\n    \"idNumber\": \"12345678\"\n  },\n  \"beneficiaries\": [\n    {\n      \"firstName\": \"Jane\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"1987-03-20\",\n      \"gender\": \"Female\",\n      \"email\": \"jane.doe@example.com\",\n      \"idType\": \"national\",\n      \"idNumber\": \"87654321\",\n      \"relationship\": \"spouse\",\n      \"percentage\": 50\n    }\n  ],\n  \"children\": [\n    {\n      \"firstName\": \"Tommy\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"2010-05-15\",\n      \"gender\": \"Male\"\n    }\n  ],\n  \"spouses\": [\n    {\n      \"firstName\": \"Jane\",\n      \"lastName\": \"Doe\",\n      \"dateOfBirth\": \"1987-03-20\",\n      \"gender\": \"Female\",\n      \"email\": \"jane.doe@example.com\",\n      \"idType\": \"national\",\n      \"idNumber\": \"87654321\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/customers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "customers"]
            },
            "description": "Create a new principal member with beneficiaries and product selection. If principal already exists, returns existing principal information with status 200."
          },
          "response": []
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/customers/{{customerId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "customers", "{{customerId}}"]
            },
            "description": "Get specific principal member details by ID"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health Check",
      "description": "Health check endpoints",
      "item": [
        {
          "name": "API Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            },
            "description": "Check API health status"
          },
          "response": []
        }
      ]
    },
    {
      "name": "API Documentation",
      "description": "API documentation endpoints",
      "item": [
        {
          "name": "Public API Swagger UI",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/docs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "docs"]
            },
            "description": "Access Swagger UI for Public API documentation"
          },
          "response": []
        }
      ]
    }
  ]
}
