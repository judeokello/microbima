{
  "name": "microbima",
  "version": "0.1.0",
  "description": "MicroBima - Modern API-first microinsurance platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:all": "./start-dev.sh",
    "dev:api": "./start-api.sh",
    "dev:agent": "./start-agent.sh",
    "stop": "./stop-dev.sh",
    "status": "./check-status.sh",
    "check:watch": "./scripts/check-watch-mode.sh",
    "check:watcher-limits": "./scripts/check-file-watcher-limits.sh",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "sdk:gen": "pnpm --filter @microbima/sdk generate",
    "sdk:build": "pnpm --filter @microbima/sdk build",
    "sdk:clean": "pnpm --filter @microbima/sdk clean",
    "db:generate": "pnpm --filter @microbima/api db:generate",
    "db:migrate": "pnpm --filter @microbima/api db:migrate",
    "db:seed": "pnpm --filter @microbima/api db:seed"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^2.6.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "import-in-the-middle": "^1.14.2",
    "require-in-the-middle": "^7.5.2"
  }
}
